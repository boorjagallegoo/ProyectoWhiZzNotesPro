<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Configuracion.Configuracion">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Uid_Eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/robotoslab"
            android:padding="10dp"
            android:text="@string/Uid_Eliminar"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/EliminarCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:focusable="true"
            android:fontFamily="@font/robotoslab"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="@string/EliminarCuenta"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/icono_eliminar_cuenta" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>